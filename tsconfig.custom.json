{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es7", "dom", "dom.iterable", "es2016", "es2018.promise"],
    "paths": {
      "@root/*": ["./*"],
      "@styles/*": ["src/assets/styles/*"],
      "@fonts/*": ["src/assets/fonts/*"],
      "@scripts/*": ["src/scripts/*"],
      "@store/*": ["src/store/*"],
      "@views/*": ["src/views/*"],
      "@components/*": ["src/components/*"],
      "@node_modules/*": ["node_modules/*"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": ["src", "typings"]
}
